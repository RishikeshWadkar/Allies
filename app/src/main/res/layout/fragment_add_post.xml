<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addPostConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.post.AddPostFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/addPostTextInput"
        android:layout_width="0dp"
        android:layout_height="242dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/add_post_background_shape"
        android:ems="10"
        android:gravity="clip_vertical"
        android:hint="Enter Text..."
        android:inputType="textMultiLine|text"
        android:padding="8dp"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_post_helper_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/addPostTextInput"
        app:layout_constraintTop_toBottomOf="@+id/addPostTextInput"
        tools:visibility="visible" />

    <Button
        android:id="@+id/submitPostbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/add_post_background_shape"
        android:text="POST"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/addPostTextInput"
        app:layout_constraintStart_toStartOf="@+id/addPostTextInput"
        app:layout_constraintTop_toBottomOf="@+id/add_post_helper_text" />

</androidx.constraintlayout.widget.ConstraintLayout>